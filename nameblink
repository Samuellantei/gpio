from gpiozero import LED
from time import sleep

led = LED(17)

def dot():
	led.on()
	sleep(0.5)
	led.off()
	sleep(0.5)

def dash():
	led.on()
	sleep(1)
	led.off()
	sleep(1)

def E():
    dash()
    dot()
    dot()
    dash()
    
def r():
    dash()
    dot()
    dash()
    dot()

def i():
    dash()
    dot()
    dash()
    dash()

def c():
    dash()
    dot()
    dash()
    dash()

def say_my_name
	e()
	r()
	i()
	c()
button.when_pressed = say_my_name

pause()
